<style>
::-webkit-scrollbar{
width:0.8em;
height:0.8em;
background: #ececec;
margin-right: 10px;
}
::-webkit-scrollbar:hover{
background-color:# eaeaea ;
border: none;
}
::-webkit-resizer{
    -webkit-border-radius:4px;
    background-color:#ccc;
border: none;
}
::-webkit-scrollbar-thumb{
    min-height:0.8em;
    min-width:0.8em;
    background-color: #666;
border: none;
}
::-webkit-scrollbar-thumb:hover{
    background-color: #333;
border: none;
}
::-webkit-scrollbar-thumb:active{
    background-color:#333;
border: none;
}
</style>
<section class="step intro {{page_mood}}">
  <div class="aux" style="background-image:url({{image}});background-position:{{crop}}; filter: progid:DXImageTransform.Microsoft.AlphaImageLoader(src='{{image}}', sizingMethod='scale');
  -ms-filter: 'progid:DXImageTransform.Microsoft.AlphaImageLoader(src='{{image}}', sizingMethod='scale')';">
    <header class="section-title" style="text-align:left;left:45px">
      <hgroup>
        <h1 class="title">{{{title}}}</h1>
        <h2 class="subtitle">{{subtitle}}</h2>
      </hgroup>
      <div class="text-content"  style="width:auto;height:320px;overflow:auto;padding-right: 10px;margin-top: 20px;">
        <p class="description">
          {{{description}}}
        </p>
      </div>
      <nav class="wrap-sharing"></nav>
    </header>
    <menu class="section-arrow">
      <li><a href="{{prev}}" class="prev-page">previous page</a></li>
    </menu>
  </div>
</section>


